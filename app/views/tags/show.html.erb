<h1><%= @tag.text %></h1>
<p>Back to <%= link_to 'All Tags', tags_path %></p>
<p>All images tagged with <%= @tag.text %>:</p>
<div>
  <ul>
  <% @images.each do |image| %>
    <li>
      <%= link_to image_tag(image.url), gallery_image_path(image.gallery, image) %>
    </li>
  <% end %>
  </ul>
</div>