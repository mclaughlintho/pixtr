<h1>Edit Gallery Settings</h1>
<h3><%= @gallery.name %></h3>

<div>
  <%= form_for(@gallery) do |f| %>
  
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  
    <%= f.submit 'Update', class: 'btn btn-primary' %>
  <% end %>
</div>